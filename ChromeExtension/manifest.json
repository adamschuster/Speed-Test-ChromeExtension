
{
  "manifest_version": 2,

  "name": "Internet Speed Test",
  "description": "Quick and easy was to test internet speed",
  "version": "1.0.0",
  
  "icons": {
    "16": "icons/space16.png",
    "48": "icons/space48.png",
    "128": "icons/space128.png"
  },
  
"default_locale": "en",

  "browser_action": {
    "default_icon": "icons/space.png",
    "default_popup": "popup.html",
    "default_title": "Internet Speed Test"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
	"https://*/",
	"http://*/"
    ]
}